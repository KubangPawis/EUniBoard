<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#713232"
    android:clickable="true"
    tools:context=".SubjectsFragment">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_close"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/lblTitleOSAS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:fontFamily="@font/montserrat_black"
        android:text="OSAS"
        android:textColor="#FFFFFF"
        android:textSize="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnCounseling"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_white_rounded_drop"
        android:text="Counseling Interview"
        android:textAllCaps="false"
        android:textColor="#692626"
        android:fontFamily="@font/raleway_semibold"
        app:layout_constraintTop_toBottomOf="@id/lblTitleOSAS"
        app:layout_constraintLeft_toLeftOf="@id/lblTitleOSAS"
        app:layout_constraintRight_toRightOf="@id/lblTitleOSAS"/>

    <Button
        android:id="@+id/btnRecords"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_white_rounded_drop"
        android:text="Student Personnel Records"
        android:textAllCaps="false"
        android:textColor="#692626"
        android:fontFamily="@font/raleway_semibold"
        app:layout_constraintTop_toBottomOf="@id/btnCounseling"
        app:layout_constraintLeft_toLeftOf="@id/btnCounseling"
        app:layout_constraintRight_toRightOf="@id/btnCounseling"/>

    <Button
        android:id="@+id/btnPsych"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_white_rounded_drop"
        android:text="Psychological Testing"
        android:textAllCaps="false"
        android:textColor="#692626"
        android:fontFamily="@font/raleway_semibold"
        app:layout_constraintTop_toBottomOf="@id/btnRecords"
        app:layout_constraintLeft_toLeftOf="@id/btnRecords"
        app:layout_constraintRight_toRightOf="@id/btnRecords"/>

    <Button
        android:id="@+id/btnExitInterview"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_white_rounded_drop"
        android:text="Exit Interview"
        android:textAllCaps="false"
        android:textColor="#692626"
        android:fontFamily="@font/raleway_semibold"
        app:layout_constraintTop_toBottomOf="@id/btnPsych"
        app:layout_constraintLeft_toLeftOf="@id/btnPsych"
        app:layout_constraintRight_toRightOf="@id/btnPsych"/>

    <Button
        android:id="@+id/btnSPS"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/btn_white_rounded_drop"
        android:text="SPS Evaluation"
        android:textAllCaps="false"
        android:textColor="#692626"
        android:fontFamily="@font/raleway_semibold"
        app:layout_constraintTop_toBottomOf="@id/btnExitInterview"
        app:layout_constraintLeft_toLeftOf="@id/btnExitInterview"
        app:layout_constraintRight_toRightOf="@id/btnExitInterview"/>

</androidx.constraintlayout.widget.ConstraintLayout>