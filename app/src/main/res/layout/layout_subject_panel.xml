<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="111dp"
    android:background="@drawable/pnl_subject">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblSectionEditable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:fontFamily="@font/montserrat"
            android:text="section"
            android:textSize="8sp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/lblSection"
            app:layout_constraintTop_toBottomOf="@+id/lblSubject"/>

        <TextView
            android:id="@+id/lblProfEditable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="2dp"
            android:text="professor"
            android:textSize="8sp"
            android:textColor="#FFFFFF"
            app:layout_constraintStart_toEndOf="@+id/lblProfessor"
            app:layout_constraintTop_toBottomOf="@+id/lblSectionEditable" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/_dots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:src="@drawable/line_separator"
            app:layout_constraintTop_toBottomOf="@+id/lblProfessor"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/lblSubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Subject Subject"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblSection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Section:"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblSubject" />

        <TextView
            android:id="@+id/lblProfessor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Professor:"
            android:textColor="#FFFFFF"
            android:textSize="8sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblSection" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>