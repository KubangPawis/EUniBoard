<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#692626"
    tools:context=".EnrollPersonal">

    <FrameLayout
        android:id="@+id/topImage"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:background="@drawable/enroll_ellipse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="280dp"
            android:layout_height="200dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/enroll_education_img">
        </ImageView>
    </FrameLayout>

    <TextView
        android:id="@+id/lblEducationBG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:text="Educational Background"
        android:textColor="#FFFFFF"
        android:textSize="26dp"
        android:fontFamily="@font/montserrat_black"
        app:layout_constraintTop_toBottomOf="@id/topImage"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/lblStepNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:text="step 5 of 5"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        android:fontFamily="@font/raleway_italic"
        app:layout_constraintTop_toBottomOf="@id/lblEducationBG"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lblStepNumber">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/txtElemSchool"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/dsos_txtfield">

                <EditText
                    android:layout_width="235dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/transparent"
                    android:hint="Elementary School"
                    android:scrollHorizontally="true"
                    android:textColorHint="#CCCCCC" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/txtElemGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/dsos_txtfield">

                <EditText
                    android:layout_width="235dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/transparent"
                    android:hint="Elementary GWA"
                    android:scrollHorizontally="true"
                    android:textColorHint="#CCCCCC" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/txtJuniorHS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/dsos_txtfield">

                <EditText
                    android:layout_width="235dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/transparent"
                    android:hint="Junior High School"
                    android:scrollHorizontally="true"
                    android:textColorHint="#CCCCCC" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/txtJuniorGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/dsos_txtfield">

                <EditText
                    android:layout_width="235dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/transparent"
                    android:hint="JHS GWA"
                    android:scrollHorizontally="true"
                    android:textColorHint="#CCCCCC" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/txtSeniorHS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/dsos_txtfield">

                <EditText
                    android:layout_width="235dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/transparent"
                    android:hint="Senior High School"
                    android:scrollHorizontally="true"
                    android:textColorHint="#CCCCCC" />

            </FrameLayout>

            <FrameLayout
                android:id="@+id/txtSeniorGrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@drawable/dsos_txtfield">

                <EditText
                    android:layout_width="235dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="25dp"
                    android:layout_marginBottom="4dp"
                    android:background="@android:color/transparent"
                    android:hint="SHS GWA"
                    android:scrollHorizontally="true"
                    android:textColorHint="#CCCCCC" />

            </FrameLayout>

            <Button
                android:id="@+id/btnNext"
                android:layout_width="183dp"
                android:layout_height="49dp"
                android:layout_gravity="bottom|center"
                android:layout_marginTop="25dp"
                android:background="@drawable/red_rounded_button"
                android:elevation="10dp"
                android:fontFamily="@font/raleway_extrabold"
                android:text="Next"
                android:textAppearance="@style/TextDropShadow"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>