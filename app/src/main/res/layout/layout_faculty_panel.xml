<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="111dp"
    android:background="@drawable/faculty_container">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="3dp"
            android:text="section"
            android:textColor="#FFFFFF"
            android:textSize="8dp"
            app:layout_constraintTop_toBottomOf="@+id/subjectPlaceholder"
            app:layout_constraintStart_toEndOf="@id/lblFacultySection"/>

        <TextView
            android:id="@+id/subjectPlaceholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.5dp"
            android:layout_marginLeft="3dp"
            android:text="subject"
            android:textColor="#FFFFFF"
            android:textSize="8dp"
            app:layout_constraintTop_toBottomOf="@+id/lblProf"
            app:layout_constraintStart_toEndOf="@id/lblFacultySubject"/>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/line_separator"
            app:layout_constraintTop_toBottomOf="@id/dpContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/lblFacultySection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:text="Section:"
            android:textColor="#FFFFFF"
            android:textSize="8dp"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@+id/lblFacultySubject"
            app:layout_constraintStart_toEndOf="@+id/dpContainer"/>
        <TextView
            android:id="@+id/lblFacultySubject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Subject:"
            android:textColor="#FFFFFF"
            android:textSize="8dp"
            android:fontFamily="@font/montserrat_medium"
            app:layout_constraintTop_toBottomOf="@+id/lblProf"
            app:layout_constraintStart_toEndOf="@+id/dpContainer"/>

        <TextView
            android:id="@+id/lblProf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Professor"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/dpContainer"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="14dp"
            android:layout_height="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="15dp"
            android:src="@drawable/_dots"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/dpContainer"
            android:src="@drawable/faculty_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>