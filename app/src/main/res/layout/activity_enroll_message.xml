<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#692626"
    tools:context=".EnrollMessage">

    <!-- All rights reserved -->

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/logo_mseuf"
            android:layout_width="550dp"
            android:layout_height="550dp"
            android:layout_gravity="center"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="-165dp"
            android:adjustViewBounds="true"
            android:alpha="0.5"
            android:rotation="-15"
            android:scaleType="fitXY"
            android:src="@drawable/logo_mseuf" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgMascot"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:layout_marginBottom="-10dp"
                android:scaleType="fitCenter"
                android:src="@drawable/mseuf_mascot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/enrollMessageGroup" />

            <FrameLayout
                android:id="@+id/enrollMessageGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                    android:id="@+id/titleBox"
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:layout_gravity="bottom"
                    android:scaleType="fitXY"
                    android:src="@drawable/enroll_title_box" />

                <ImageView
                    android:id="@+id/textAreaBox"
                    android:layout_width="match_parent"
                    android:layout_height="430dp"
                    android:layout_gravity="bottom"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/enroll_message_box" />

                <TextView
                    android:id="@+id/lblInstructions"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="110dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:lineSpacingExtra="2dp"
                    android:text="Click START to create your Student Account."
                    android:textColor="#FFFFFF"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/lblMessage"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|center"
                    android:gravity="center"
                    android:layout_marginBottom="160dp"
                    android:fontFamily="@font/raleway_semibold"
                    android:lineSpacingExtra="2dp"
                    android:text="Welcome aboard to Enverga University!\n\n\We're thrilled to extend our warmest greetings as you embark on this academic voyage with us. Prepare to immerse yourself in a rich tapestry of learning, forge new connections, and explore the vast horizons of knowledge that await. Together, let's cultivate an environment where curiosity thrives and accomplishments flourish."
                    android:textColor="#FFFFFF"
                    android:textSize="13dp" />

                <TextView
                    android:id="@+id/lblTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|bottom"
                    android:layout_marginBottom="395dp"
                    android:fontFamily="@font/montserrat_extrabold"
                    android:rotation="9"
                    android:text="Welcome!"
                    android:textAppearance="@style/TextDropShadow"
                    android:textColor="#FFFFFF"
                    android:textSize="42dp" />

                <Button
                    android:id="@+id/btnStart"
                    android:layout_width="183dp"
                    android:layout_height="49dp"
                    android:layout_gravity="bottom|center"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/btn_red_rounded_drop"
                    android:elevation="10dp"
                    android:fontFamily="@font/raleway_extrabold"
                    android:onClick="goToEnrollPersonal"
                    android:text="START"
                    android:textAppearance="@style/TextDropShadow"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp" />
            </FrameLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- TITLE AREA -->

