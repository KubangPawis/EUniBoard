<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/btnLogOut"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="43dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/sign_out"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="-20dp"
        android:src="@drawable/euniboard_logo3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/profile_bg"
        android:layout_width="match_parent"
        android:layout_height="430dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/bg_profile" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout2">

        <ImageView
            android:id="@+id/line1"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="13dp"
            android:src="@drawable/register_line_horizontal"
            app:layout_constraintTop_toBottomOf="@id/lblDepartment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/line2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="13dp"
            android:src="@drawable/register_line_horizontal"
            app:layout_constraintTop_toBottomOf="@id/lblProgram"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <ImageView
            android:id="@+id/line3"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_marginTop="13dp"
            android:src="@drawable/register_line_horizontal"
            app:layout_constraintTop_toBottomOf="@id/lblUserEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:id="@+id/EmailLBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Email"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line2" />
        <TextView
            android:id="@+id/lblUserEmail"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="testemail123@gmail.com"
            android:textSize="12sp"
            android:textColor="#C9C7C7"
            android:fontFamily="@font/raleway"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/EmailLBL"/>
        <TextView
            android:id="@+id/ProgramLBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="Program"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/line1" />

        <TextView
            android:id="@+id/lblProgram"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="Bachelor in Science of Computer Science with specialization in Software Engineering"
            android:textSize="12sp"
            android:textColor="#C9C7C7"
            android:fontFamily="@font/raleway"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ProgramLBL"/>

        <TextView
            android:id="@+id/departmentLBL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:text="Department"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/montserrat_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btnChangeEmail"/>

        <TextView
            android:id="@+id/lblDepartment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:text="College of Computing and Multimedia Studies"
            android:textSize="12sp"
            android:textColor="#C9C7C7"
            android:fontFamily="@font/raleway"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/departmentLBL"/>

        <Button
            android:id="@+id/btnChangeEmail"
            android:layout_width="152dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/change_email_button"
            android:text="Change Email"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:fontFamily="@font/raleway_bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <Button
            android:id="@+id/btnChangePassword"
            android:layout_width="152dp"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/change_email_button"
            android:text="Change Password"
            android:textColor="#FFFFFF"
            android:textSize="13sp"
            android:fontFamily="@font/raleway_bold"
            app:layout_constraintStart_toEndOf="@id/btnChangeEmail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <FrameLayout
        android:id="@+id/frameLayout2"
        android:layout_width="331dp"
        android:layout_height="93dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/dsos_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/constraintLayout">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/raleway"
            android:text="09991234567"
            android:textColor="#9A9A9A" />

        <TextView
            android:id="@+id/lblStudentNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/raleway"
            android:text="A22-33430"
            android:textColor="#9A9A9A" />

        <TextView
            android:id="@+id/studNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="23dp"
            android:fontFamily="@font/raleway_semibold"
            android:text="Student Number"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cpNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="23dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/raleway_semibold"
            android:text="Phone Number"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/studentNo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="start"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/student_profile_icon" />

        <ImageView
            android:id="@+id/phoneNo"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:layout_marginTop="20dp"
            android:layout_marginRight="125dp"
            android:src="@drawable/phone_icon" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/lblUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_extrabold"
            android:text="John Doe"
            android:textColor="#242424"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iconPFP" />

        <TextView
            android:id="@+id/lblUserCourse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_semibold"
            android:text="BS Computer Science"
            android:textColor="#242424"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/lblUserName" />

        <ImageView
            android:id="@+id/iconPFP"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/male_profile_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:id="@+id/navigationBar"
        android:layout_width="170dp"
        android:layout_height="40dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- PROFILE -->


        <ImageView
            android:id="@+id/iconProfile"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:src="@drawable/profile_selected" />

        <!-- HOME -->
        <ImageView
            android:id="@+id/iconHome"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="40dp"
            android:clickable="true"
            android:src="@drawable/home_icon" />

        <!-- NOTIFICATION -->
        <ImageView
            android:id="@+id/iconNotification"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="15dp"
            android:clickable="true"
            android:src="@drawable/notification_icon" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>