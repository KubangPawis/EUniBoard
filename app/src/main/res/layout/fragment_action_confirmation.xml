<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:clickable="true"
    tools:context=".SubjectsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="333dp"
        android:layout_height="250dp"
        android:background="@drawable/popup_red_rounded_drop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/titleMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Are you sure?"
            android:textColor="#FFFFFF"
            android:textSize="26dp"
            android:fontFamily="@font/montserrat_black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/paragraphMessage"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:text="Are you sure that you want to enroll in this block?"
            android:textColor="#FFFFFF"
            android:textSize="16dp"
            android:fontFamily="@font/raleway_medium"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/titleMessage"/>

        <Button
            android:id="@+id/btnYes"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginStart="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_orange_rounded_drop"
            android:text="Yes"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:fontFamily="@font/raleway_extrabold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/btnNo"
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:layout_marginEnd="60dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_white_rounded_drop"
            android:text="No"
            android:textColor="#692626"
            android:textSize="18dp"
            android:fontFamily="@font/raleway_extrabold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>