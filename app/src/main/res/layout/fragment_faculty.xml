<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#713232"
    android:clickable="true"
    tools:context=".SubjectsFragment">

    <ImageView
        android:id="@+id/btnClose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:background="@drawable/btn_close"
        android:clickable="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <TextView
        android:id="@+id/lblTitleFaculty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:fontFamily="@font/montserrat_black"
        android:text="Faculty"
        android:textColor="#FFFFFF"
        android:textSize="42dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <Button
        android:id="@+id/btnViewFaculty"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/btn_white_rounded_drop"
        android:text="View Faculty"
        android:textAllCaps="false"
        android:textColor="#692626"
        android:fontFamily="@font/raleway_semibold"
        app:layout_constraintTop_toBottomOf="@id/lblTitleFaculty"
        app:layout_constraintLeft_toLeftOf="@id/lblTitleFaculty"
        app:layout_constraintRight_toRightOf="@id/lblTitleFaculty"/>

    <Button
        android:id="@+id/btnEvalFaculty"
        android:layout_width="232dp"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/btn_white_rounded_drop"
        android:text="Evaluate Faculty"
        android:textAllCaps="false"
        android:textColor="#692626"
        android:fontFamily="@font/raleway_semibold"
        app:layout_constraintTop_toBottomOf="@id/btnViewFaculty"
        app:layout_constraintLeft_toLeftOf="@id/btnViewFaculty"
        app:layout_constraintRight_toRightOf="@id/btnViewFaculty"/>

</androidx.constraintlayout.widget.ConstraintLayout>